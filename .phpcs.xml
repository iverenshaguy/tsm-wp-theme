<?xml version="1.0"?>
<ruleset name="TSM Theme">
    <description>WordPress Coding Standards for TSM Theme</description>
    
    <!-- What to scan -->
    <file>.</file>
    
    <!-- Exclude files -->
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*.min.js</exclude-pattern>
    <exclude-pattern>*.min.css</exclude-pattern>
    <exclude-pattern>package-lock.json</exclude-pattern>
    <exclude-pattern>composer.lock</exclude-pattern>
    
    <!-- How to scan -->
    <arg name="extensions" value="php"/>
    
    <!-- Rules: Check PHP version -->
    <config name="php_version" value="70100"/>
    
    <!-- Rules: Use WordPress Coding Standards -->
    <rule ref="WordPress-Core">
        <!-- Allow short array syntax -->
        <exclude name="Generic.Arrays.DisallowShortArraySyntax"/>
        
        <!-- Allow some flexibility with text domain -->
        <exclude name="WordPress.WP.I18n.MissingTextDomain"/>
    </rule>
    
    <!-- Rules: WordPress-Extra -->
    <rule ref="WordPress-Extra">
        <!-- Allow some flexibility -->
        <exclude name="WordPress.WP.I18n.MissingTextDomain"/>
    </rule>
</ruleset>
