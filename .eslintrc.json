{
  "env": {
    "browser": true,
    "es2021": true,
    "jquery": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "warn",
    "no-debugger": "error"
  },
  "globals": {
    "wp": "readonly",
    "jQuery": "readonly",
    "tailwind": "readonly"
  },
  "overrides": [
    {
      "files": ["tailwind.config.js", "postcss.config.js", "**/scripts/**/*.js"],
      "env": {
        "node": true,
        "browser": false
      },
      "parserOptions": {
        "sourceType": "script",
        "ecmaVersion": "latest"
      },
      "globals": {
        "require": "readonly",
        "module": "readonly",
        "exports": "readonly",
        "__dirname": "readonly",
        "__filename": "readonly",
        "process": "readonly"
      }
    }
  ]
}
